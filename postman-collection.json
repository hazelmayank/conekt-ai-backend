{
  "info": {
    "name": "Conekt API Collection",
    "description": "Complete API collection for Conekt MVP",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "authToken",
      "value": ""
    },
    {
      "key": "adminToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+919876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/otp/send",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "otp", "send"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+919876543210\",\n  \"otp\": \"000000\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/otp/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "otp", "verify"]
            }
          }
        }
      ]
    },
    {
      "name": "Advertiser APIs",
      "item": [
        {
          "name": "Get Cities",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/cities",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cities"]
            }
          }
        },
        {
          "name": "Get Routes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/cities/:cityId/routes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cities", ":cityId", "routes"],
              "variable": [
                {
                  "key": "cityId",
                  "value": "CITY_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Check Availability",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"routeId\": \"ROUTE_ID_HERE\",\n  \"package\": \"7\",\n  \"startDate\": \"2025-01-20T00:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/availability/check",
              "host": ["{{baseUrl}}"],
              "path": ["api", "availability", "check"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin APIs",
      "item": [
        {
          "name": "Admin Dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/dashboard",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "dashboard"]
            }
          }
        },
        {
          "name": "Get Pending Campaigns",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/campaigns?status=pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "campaigns"],
              "query": [
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Hardware APIs",
      "item": [
        {
          "name": "Truck Heartbeat",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-api-key",
                "value": "your-api-secret-key-for-hardware-auth"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"device_id\": \"TRUCK_001\",\n  \"status\": \"online\",\n  \"uptime_seconds\": 3600,\n  \"last_ad_playback_timestamp\": \"2025-01-18T12:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/hardware/TRUCK_001/heartbeat",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hardware", "TRUCK_001", "heartbeat"]
            }
          }
        },
        {
          "name": "Get Playlist",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-api-key",
                "value": "your-api-secret-key-for-hardware-auth"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/hardware/TRUCK_001/playlist",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hardware", "TRUCK_001", "playlist"]
            }
          }
        }
      ]
    }
  ]
}

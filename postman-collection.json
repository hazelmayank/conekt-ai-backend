{
  "info": {
    "name": "Conekt AI - Hardware Endpoints",
    "description": "Hardware endpoints for truck communication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001/api"
    },
    {
      "key": "api_secret_key",
      "value": "your_api_secret_key_here"
    },
    {
      "key": "truck_id",
      "value": "truck_id_here"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3001/health"
        },
        "description": "Check server health status."
      }
    },
    {
      "name": "Truck Heartbeat",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_secret_key}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"device_id\": \"CTRL-TRUCK-001\",\n  \"status\": \"online\",\n  \"uptime_seconds\": 1860,\n  \"last_ad_playback_timestamp\": \"2025-09-29T06:35:40.000Z\",\n  \"gps_coordinates\": {\n    \"latitude\": 19.0760,\n    \"longitude\": 72.8777,\n    \"timestamp\": \"2025-09-29T06:35:40.000Z\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/hardware/{{truck_id}}/heartbeat"
        },
        "description": "Send heartbeat from truck hardware to update status."
      }
    },
    {
      "name": "Get Truck Playlist",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_secret_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/hardware/{{truck_id}}/playlist"
        },
        "description": "Get playlist for truck hardware (returns today's playlist)."
      }
    },
    {
      "name": "Get Truck Telemetry",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_secret_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/hardware/{{truck_id}}/telemetry"
        },
        "description": "Get telemetry data for truck hardware monitoring."
      }
    }
  ]
}